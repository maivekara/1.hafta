[
  {
    "name": "payment-service",
    "image": "<IMAGE_NAME>", # <-- Burası kritik! Buraya imaj adınızı yazıyoruz, aksiyon bunu değiştirecek.
    "cpu": 256,
    "memory": 512,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80,
        "protocol": "tcp"
      }
    ],
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/payment-cluster",
        "awslogs-region": "eu-central-1",
        "awslogs-stream-prefix": "ecs"
      }
    }
  }
]
