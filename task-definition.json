[
  {
    "name": "payment-service", # Servis adınızla eşleşmeli
    "image": "<PLACEHOLDER_IMAGE>", # <-- BURASI ÇOK ÖNEMLİ: Bu bir yer tutucudur!
    "cpu": 256,
    "memory": 512,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80,
        "protocol": "tcp"
      }
    ],
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/payment-cluster", # CloudWatch Logs grubunuz
        "awslogs-region": "eu-central-1", # AWS_REGION ile eşleşmeli
        "awslogs-stream-prefix": "ecs"
      }
    }
  }
]
